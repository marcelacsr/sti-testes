<% unless current_user?(@user) %>
    <div id="follow_form">
      <% if current_user.following?(@user) %>
          <%= render 'unfollow' %>
      <% elsif @user.notified?(current_user) && !(@notification&.notification_read) %>
          <%= render 'notified' %>
      <% else %>
          <%= render 'follow' %>
      <% end %>
    </div>
<% end %>
